<% @idollist.ma_dmm_details.each do |detail| %>
        <%= link_to detail.dvd_url,  :target=>["_blank"] do %>
        <%= image_tag detail.dvd_thumbnail, size: '124x169' %>
        <span><%= detail.title %></span>
        <% end %>

<% end %>

